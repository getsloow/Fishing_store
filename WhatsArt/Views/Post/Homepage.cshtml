@model IEnumerable<Post>
@{
    ViewData["Title"] = "Homepage";

}
  <body >
      <h1> Here you can see all the products on our page</h1
      <br />
        <p>If you wish to see them grouped by category, please select "Categories" from the menu above.</p>    
    
<table class="table table-bordered " style="width:100%">

    <tbody>
        @foreach(var obj in Model)
        {
            
            <tr>
                 <td style="text-align:center;">
                    <img src ="@obj.PostImage" width="80%" height="80%" ></img>
                </td>
                
            </tr>
            <tr>
                
                <td style="text-align:right">
                    @obj.PostDescription
                </td>
            </tr>
        }
    </tbody>
</table>
</body>