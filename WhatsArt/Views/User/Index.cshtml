@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";

}

@if(TempData["success"]!= null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary"> Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Create New Category
            </a>
        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
             <th>
                Category Details
            </th>
            <th>
                
            </th>
            
        </tr>

    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    <center>
                          <center> <img src="@obj.UserPassword" width="200px" height="200px "></img><br/></center>
                 
                    @obj?.UserName
                        </center>
                </td>
                <td>
                    @obj?.UserEmail
                </td>
               @*     <td >
                    <img src ="@obj.UserPassword" width="200px" height="200px"></img>
                </td>*@
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Post" asp-action="ViewUserPosts" asp-route-id="@obj.Id" 
                        class="btn btn-primary"><i class="bi bi-pencil-fill"></i>View Products in this Category</a>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-primary"><i class="bi bi-pencil-fill"></i>Edit Category</a>
                         <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" 
                        class="btn btn-primary"><i class="bi bi-trash-fill"></i>Delete Category</a>
                    </div>
                </td>
            </tr>

        }
    </tbody>
</table>